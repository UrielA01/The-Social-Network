<body>
    <% if(typeof user !== 'undefined'){ %>
    <%- include("menu_logged", {error: error, user: user}); %>
    <% }else{ %>
    <%- include("menu", {error: error}); %>
    <% } %>
    <form action="/upload_post" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="content">Title</label>
            <input type="text" class="form-control" id="title" name="title" />
        </div>
          <div class="form-group">
              <label for="content">Content</label>
              <textarea class="form-control" id="content" name="content" rows="3" cols="50"></textarea>
          </div>
          <div class="form-group">
              <label for="image">Image</label>
              <input type="file" class="form-control" id="image" name="image">
          </div>
        <button type="submit" class="btn btn-primary mb-2">Submit</button>
    </form>
</body>

